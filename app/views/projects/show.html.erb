<div class="container">
  <div class="project-show">
    <h1 class="text-center"><%= @project.title %><%= " - " if @project.user == current_user %><%= link_to "edit", edit_project_path(@project) if @project.user == current_user %></h1>
    <h3 class="text-center"><strong>Owner: </strong><%= link_to @project.user.full_name, user_path(@project.user) %></h3>
    <h2>Description:</h2>
    <p><%= @project.description %></p>
    <h1 class="text-center">Contributions: <%= @project.contributions.length %> </h1>
    <% if @project.user == current_user %>
      <div class="text-center card-spacing"><%= link_to "Add contribution", new_project_contribution_path(@project)%></div>
    <% end %>
    <div class="row">
      <% @project.contributions.each_with_index do |contribution, i| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <div class="card-category green"># <%= i + 1 %></div>
            <div class="card-description">
              <h2><%= contribution.title %></h2>
              <p><%= contribution.description[0, 100] %></p>
              <p><strong>Relevant skills: &ensp;</strong><%= contribution.skills.map {|skill| skill.name}.join(", ") %></p>
              <p class="green" id="bright"><%= "New interest" if contribution.interests.length > 0 && contribution.status == "open" %></p>
            </div>
            <!-- <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay"> -->
            <a class="card-link" href="<%= contribution_path(contribution) %>" ></a>
          </div>
        </div>
      <% end %>
    </div>


    <%= link_to "Back", :back %>
  </div>
</div>
