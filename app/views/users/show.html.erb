<div class="user-show">
  <div class="info">
    <img src="<%= image_path("#{@user.email}.png") %>" height="160" width="160">
  <h2><%= @user.email %></h2>
  <p><%= @user.first_name + " " + @user.last_name %></p>
  <p><%= @user.bio %></p>
  </div>

  <div class="user-skills-show">
    <h3>Skills</h3>
    <p><% @user.knowledges.each do |knowledge| %></p>
    <%= knowledge.skill.name + ": " + knowledge.level %>
    <% end %>
    <br>
    <div class="skill-button">
    <%= link_to "Add a Skill", new_knowledge_path %>
    </div>
  </div>

  <div class="user-projects-show">
    <h3>Projects:</h3>
    <% @user.projects.each do |project| %>
    <%= link_to project.title, project_path(project) %>
    <% end %>
    <br>
    <%= link_to "Create a New Project", new_project_path %>
  </div>

  <div class="user-contributions-show">
    <h3>Contributions:</h3>
    <% @user.contributions.each do |contribution| %>
    <%= contribution.title %>
    <% end %>
  </div>

  <%= link_to "Back", :back %>
</div>
