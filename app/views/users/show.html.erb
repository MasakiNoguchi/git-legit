<div class="container">

<!----------------------->

  <div class="user-show section">
    <div class="user-profile">
      <% if File.exist?("#{@user.email}.png") %>
        <img class="avatar" src="<%= image_path("#{@user.email}.png") %>" height="160" width="160">
      <% else %>
        <img class="avatar" src="<%= image_path("placeholder.png") %>" height="160" width="160">
      <% end %>
      <div class="info">
        <h2><%= @user.full_name %></h2>
        <p><%= @user.email %></p>
        <p><%= @user.bio %></p>
      </div>
    </div>

    <div class="user-skills">
      <h3>Skills:</h3>
      <p><em><% @user.knowledges.each do |knowledge| %></p>
      <%= raw '<i class="devicon-' + knowledge.skill.slug + ' colored"></i>' %>
      <%= knowledge.skill.name + ": " + knowledge.level %>
        <% if @user == current_user %>
          <%= link_to knowledge_path(knowledge), method: :delete do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        <% end %>
      <% end %></em>
      <br>
      <% if @user == current_user %>
        <div class="add-skill-button">
         <%= link_to "Add a Skill", new_knowledge_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

<!---------------------------->

  <!-- USER PROJECT CARDS -->

  <%= render 'pages/user_show_projects_cards' %>

<!------------------------------>

  <div class="user-interests section">
    <h3>Contributions you are interested in:</h3>
    <div class="row">
      <% @user.interests.each do |interest| %>
        <div class="col-xs-12 col-sm-4">
          <div class="thecard">
            <div class="card-img">
              <img src="https://picsum.photos/200/300/?random">
            </div>
            <div class="card-caption">
              <div class="card-delete">
                <% if interest.contribution.user == current_user %>
                <%= link_to contribution_path(interest), method: :delete do %>
                <i class="far fa-trash-alt"></i>
                  <% end %>
                <% end %>
              </div>
              <i id="clock-btn" class="far fa-clock"></i>
              <span class="date">Last updated: <%= interest.updated_at %></span>
              <h1 class="project-title"><%= interest.contribution.title %></h1>
              <p class="card-description">
                <h2><%= interest.contribution.title %></h2>
                <p><%= interest.contribution.description[0, 100] %></p>
                <p class ="card-skills"><strong><em>Relevant skills:</em> &ensp;</strong><%= interest.contribution.skills.join(", ") %></p>
            </div>
            <div class="card-out">
              <h5>Read more</h5>
              <i id="out-icon" class="fa fa-angle-right"></i>
            </div>
            <a class="card-link" href="<%= contribution_path(interest.contribution) %>" ></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>


<!---------------------------------->

  <div class="user-contributions section" id="last-section">
    <h3>Contributions you are working on:</h3>
    <div class="row">
      <% @user.contributions.each do |contribution| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <a class="card-link" href="<%= contribution_path(contribution) %>" ></a>
            <div class="card-description">
              <h2><%= contribution.title %></h2>
              <p><%= contribution.description[0, 100] %></p>
            </div>
            <div class="card-delete">
                <i class="far fa-trash-alt"></i>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%= link_to "Back", :back %>
</div>



