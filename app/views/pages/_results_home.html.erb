<% @projects.each_with_index do |project, i| %>
  <div class="col-xs-12 col-sm-4">
    <div class="thecard">
      <div class="card-img">
        <img src="https://picsum.photos/200/300/?random">
      </div>
      <div class="card-caption">
        <i id="heart-btn" class="far fa-heart"></i>
        <span class="date">Thursday, July 16, 2015</span>
        <h1><%= project.title %></h1>
        <p><%= project.description[0, 100] %></p>
        <p><strong>Relevant skills: &ensp;</strong><%= project_skills(project).join(", ") %></p>
      </div>
      <div class="card-outmore">
        <h5>Read more</h5>
        <i id="outmore-icon" class="fa fa-angle-right"></i>
      </div>
      <a class="card-link" href="<%= project_path(project) %>" ></a>
    </div>
  </div>
<% end %>
