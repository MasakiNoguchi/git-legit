<%= render 'banner' %>
<div class="container">
  <h1 class="latest-projects">Latest projects</h1>
  <div class="row">
    <% @projects.each_with_index do |project, i| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-category green"># <%= i + 1 %></div>
          <div class="card-description">
            <h2><%= project.title %></h2>
            <p><%= project.description[0, 100] %></p>
            <p><strong>Relevant skills: &ensp;</strong><%= project_skills(project).join(", ") %></p>
          </div>
          <!-- <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay"> -->
          <a class="card-link" href="<%= project_path(project) %>" ></a>
        </div>
      </div>
    <% end %>
  </div>
</div>
